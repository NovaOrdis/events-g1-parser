#!/bin/bash


function build-classpath() {

    local found=false
    for i in $(find $(dirname $0)/../target -name *.jar); do
        [[ "${i}" =~ -source ]] && continue;
        found=true
        echo ${i}
    done

    ${found} || { echo "no *.jar file found in $(dirname $0)/../target" 1>&2; exit 1; }
}

function main() {

    local cp
    cp=$(build-classpath) || exit 1

    java -cp ${cp} io.novaordis.events.api.Main $@

}

main $@



